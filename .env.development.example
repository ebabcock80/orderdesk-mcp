# ============================================================================
# Development Environment Configuration
# ============================================================================
# 
# Purpose: Local development with debugging enabled
# Use: Local testing, feature development, debugging
# Security: Relaxed for development convenience
#
# Setup: cp .env.development.example .env
#
# ============================================================================

# ============================================================================
# Core Configuration
# ============================================================================
MCP_KMS_KEY=dev-kms-key-for-local-testing-only-32-bytes-minimum-required

# Database
DATABASE_URL=sqlite:///./data/dev.db

# Server
PORT=8000
TRUST_PROXY=false
LOG_LEVEL=DEBUG

# ============================================================================
# Caching
# ============================================================================
CACHE_BACKEND=memory
# REDIS_URL=redis://localhost:6379/0  # Optional: Enable for Redis testing

# Cache TTLs (seconds)
CACHE_TTL_ORDERS=15
CACHE_TTL_PRODUCTS=60
CACHE_TTL_CUSTOMERS=300
CACHE_TTL_STORE_SETTINGS=3600

# ============================================================================
# HTTP Client & Resilience
# ============================================================================
HTTP_TIMEOUT_CONNECT=15.0
HTTP_TIMEOUT_READ=60.0
HTTP_TIMEOUT_WRITE=60.0
HTTP_TIMEOUT_POOL=5.0
HTTP_MAX_RETRIES=3
MUTATION_MAX_RETRIES=5

# ============================================================================
# Security & Authentication
# ============================================================================
# Master key auth
ENABLE_AUTO_PROVISION=true

# CORS (allow all for dev)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# ============================================================================
# WebUI (Optional - Disabled for MCP-only dev)
# ============================================================================
ENABLE_WEBUI=false
ENABLE_PUBLIC_SIGNUP=false

# ============================================================================
# Testing & Integration Tests
# ============================================================================
ORDERDESK_TEST_ENABLED=false

# ============================================================================
# Observability
# ============================================================================
ENABLE_METRICS=true
ENABLE_DETAILED_HEALTH=true
ENABLE_TRACE_VIEWER=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=7
